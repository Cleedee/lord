WindowManager:
    MainWindow:
    DecksWindow:
    DeckWindow:

<MainWindow>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size_hint: None, None
        center: root.center
        spacing: 10

        MDFillRoundFlatButton:
            text: "Decks"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release:
                app.root.current = 'decks_window'
                root.manager.transition.direction = "left"
        MDFillRoundFlatButton:
            text: "Scenarios"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}


<DecksWindow>:
    name: "decks_window"
    BoxLayout:
        orientation: "vertical"
        #size_hint: None, None
        center: root.center
        spacing: 10

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            ListaDecks:
                cols: 1
                spacing: 10
                size_hint_y: None

                Button:
                    text: "Go Back"
                    size_hint_y: None
                    height: 40
                    on_release:
                        app.root.current = "main"
                        root.manager.transition.direction = "right"

<DeckWindow>:
    name: "deck_window"
    BoxLayout:
        orientation: "vertical"
        #size_hint: None, None
        center: root.center
        spacing: 10

        Button:
            text: "Go Back"
            size_hint_y: None
            height: 40
            on_release:
                app.root.current = "decks_window"
                root.manager.transition.direction = "right"
